

@{
    ViewData["Title"] = "SignIn";
}

<br />

<h2>Sign In</h2>
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(m => m.Errors))
            {
                <li>@error.ErrorMessage</li>

            }
        </ul>
    </div>

}


    <form method="post" asp-action="SignIn" asp-controller="Account">
        <div class="form-group">
            <label for="Email"> Email Address</label>
            <input name="Email" class="form-control" type="email" />
        </div>

        <div class="form-group">
            <label for="Input Password"> Password</label>
            <input name="Password" class="form-control" type="password" />
        </div>

        <div>
            <input type="submit" class="btn btn-primary" value="Sign In" />
            <a asp-action="ForgotPassword" class="btn btn-secondary"> I Forgot My Password</a>


        </div>


    </form>